<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="aterra.list">
      <field name="name">Aterra List</field>
      <field name="model">aterra.aterra</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="volume"/>
          <field name="series"/>
          <field name="rarity"/>
          <field name="rank"/>
          <field name="power"/>
          <field name="defense"/>
          <field name="elements"/>
          <field name="abilities"/>
          <field name="description"/>
          <!-- <field name="image"/> -->
        </tree>
      </field>
    </record>


     <record id="aterra_kanban_view" model="ir.ui.view">
            <field name="name">aterra.kanban</field>
            <field name="model">aterra.aterra</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                  <field name="id"/>
                  <field name="name"/>
                  <field name="volume"/>
                  <field name="series"/>
                  <field name="rarity"/>
                  <field name="rank"/>
                  <field name="power"/>
                  <field name="defense"/>
                  <field name="elements"/>
                  <field name="abilities"/>
                  <field name="description"/>
                  <field name="image"/>
                  
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                  <img t-att-src="kanban_image('aterra.aterra', 'image', record.id.raw_value)" />
                                </div> 
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record> 


